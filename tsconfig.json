{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "noEmitOnError": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["server/**/*.ts", "server/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": true,
  "buildOnSave": true
}
